<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.moriak.schednote.views.WallpaperView
        android:id="@+id/screen_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="52dp"
        app:layout_constraintBottom_toTopOf="@+id/palette_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/odd_btn"
        style="@style/border_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="I."
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/even_btn"
        style="@style/border_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="4dp"
        android:gravity="center"
        android:text="II."
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/odd_btn"
        app:layout_constraintStart_toEndOf="@+id/odd_btn"
        app:layout_constraintTop_toTopOf="@+id/odd_btn"
        tools:ignore="HardcodedText" />

    <ImageButton
        android:id="@+id/bg_img_open"
        style="@style/border_button"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/set_bg_image"
        app:layout_constraintBottom_toTopOf="@+id/palette_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_image_black_24dp" />

    <ImageButton
        android:id="@+id/wallpaper"
        style="@style/border_button"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:contentDescription="@string/set_as_wallpaper"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_phone_android_black_24dp" />

    <ImageView
        android:id="@+id/bg_rotate_left"
        style="@style/border_button"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="8dp"
        app:srcCompat="@drawable/ic_rotate_left_black_24dp"
        app:layout_constraintTop_toTopOf="@id/bg_rotate_right"
        app:layout_constraintBottom_toBottomOf="@id/bg_rotate_right"
        app:layout_constraintRight_toLeftOf="@id/bg_rotate_right"
        android:contentDescription="@string/rotate_left" />

    <ImageView
        android:id="@+id/bg_rotate_right"
        style="@style/border_button"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_margin="8dp"
        app:srcCompat="@drawable/ic_rotate_right_black_24dp"
        app:layout_constraintTop_toTopOf="@id/wallpaper"
        app:layout_constraintBottom_toBottomOf="@id/wallpaper"
        app:layout_constraintRight_toLeftOf="@id/wallpaper"
        android:contentDescription="@string/rotate_right"/>

    <ImageButton
        android:id="@+id/palette_open"
        style="@style/border_button"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/set_colors"
        android:src="@drawable/ic_palette_black_24dp"
        app:layout_constraintBottom_toTopOf="@+id/palette_box"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/palette_box"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#B792E1"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/bg_img_box"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/palette_close"
            style="@style/juicy_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end"
            android:layout_margin="4dp"
            android:text="Ã—"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/palette_divider"
            tools:ignore="HardcodedText" />

        <com.moriak.schednote.views.OptionStepper
            android:id="@+id/palette_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:arrowBackground="#4FFF"
            app:arrowColor="#5C348C"
            app:arrowStroke="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/palette_h_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hue"
            android:textAlignment="textEnd"
            app:layout_constraintBottom_toBottomOf="@+id/palette_h_range"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@+id/palette_h_range" />

        <SeekBar
            android:id="@+id/palette_h_range"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:max="359"
            app:layout_constraintBottom_toBottomOf="@+id/palette_h_number"
            app:layout_constraintEnd_toEndOf="@+id/palette_s_range"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@+id/palette_h_number" />

        <TextView
            android:id="@+id/palette_h_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="2"
            app:layout_constraintEnd_toEndOf="@+id/palette_a_number"
            app:layout_constraintTop_toBottomOf="@+id/palette_category" />

        <TextView
            android:id="@+id/palette_s_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/saturation"
            android:textAlignment="textEnd"
            app:layout_constraintBottom_toBottomOf="@+id/palette_s_range"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@+id/palette_s_range" />

        <SeekBar
            android:id="@+id/palette_s_range"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/palette_s_number"
            app:layout_constraintEnd_toEndOf="@+id/palette_a_range"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@+id/palette_s_number" />

        <TextView
            android:id="@+id/palette_s_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="2"
            app:layout_constraintEnd_toEndOf="@+id/palette_a_number"
            app:layout_constraintTop_toBottomOf="@+id/palette_h_number" />

        <TextView
            android:id="@+id/palette_l_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/luminance"
            android:textAlignment="textEnd"
            app:layout_constraintBottom_toBottomOf="@+id/palette_l_range"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@+id/palette_l_range" />

        <SeekBar
            android:id="@+id/palette_l_range"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/palette_l_number"
            app:layout_constraintEnd_toEndOf="@+id/palette_a_range"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@+id/palette_l_number" />

        <TextView
            android:id="@+id/palette_l_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="2"
            app:layout_constraintEnd_toEndOf="@+id/palette_a_number"
            app:layout_constraintTop_toBottomOf="@+id/palette_s_number" />

        <TextView
            android:id="@+id/palette_a_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alpha"
            android:textAlignment="textEnd"
            app:layout_constraintBottom_toBottomOf="@+id/palette_a_range"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@+id/palette_a_range" />

        <SeekBar
            android:id="@+id/palette_a_range"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/palette_a_number"
            app:layout_constraintEnd_toStartOf="@+id/palette_a_number"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            app:layout_constraintTop_toTopOf="@+id/palette_a_number" />

        <TextView
            android:id="@+id/palette_a_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:ems="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/palette_l_number" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="91dp" />

        <View
            android:id="@+id/palette_divider"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:background="#5C348C"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/bg_img_box"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#C1DCF8"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <View
            android:id="@+id/bg_img_divider"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="?android:attr/listDivider"
            tools:background="#2E577E" />

        <Button
            android:id="@+id/bg_img_close"
            style="@style/juicy_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end"
            android:layout_margin="4dp"
            android:text="Ã—"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/bg_img_set"
            style="@style/border_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="@string/set_bg_image"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/bg_img_remove"
            style="@style/border_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="@string/remove_bg_image"
            android:textAlignment="center" />

        <RadioGroup
            android:id="@+id/radios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <RadioButton
                android:id="@+id/fill"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/fill"
                tools:textSize="12sp" />

            <RadioButton
                android:id="@+id/cover"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/cover"
                tools:textSize="12sp" />

            <RadioButton
                android:id="@+id/contain"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/fit"
                tools:textSize="12sp" />
        </RadioGroup>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>